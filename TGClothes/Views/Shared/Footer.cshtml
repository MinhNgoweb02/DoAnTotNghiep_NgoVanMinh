@model List<Data.EF.ProductCategory>
@{ 
    var content = (List<Data.EF.Category>)ViewBag.Category;
}

<footer class="bg3 p-t-75 p-b-32" style="background-color: #0094ff;">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-lg-4 p-b-50">
                <h4 class="mtext-103 cl0 p-b-30">
                    Danh mục
                </h4>
                @foreach (var item in Model.Where(x => x.ParentId == null).OrderBy(x => x.DisplayOrder))
                {
                    <ul>
                        <li class="p-b-10" style="color: white;">
                            <a href="/san-pham/@item.MetaTitle-@item.Id" class="stext-118 cl7 hov-cl1 trans-04 categoryLink" data-filter="*" style="color: white;">
                                @item.Name
                            </a>
                        </li>
                    </ul>
                }
            </div>

            <div class="col-sm-6 col-lg-4 p-b-50"style="color: white;">
                <h4 class="mtext-103 cl0 p-b-30">
                    Tin tức
                </h4>
                @foreach (var item in content.OrderBy(x => x.DisplayOrder))
                {
                    <ul>
                        <li class="p-b-10">
                          <a href="/category/@item.Id" class="stext-118 cl7 hov-cl1 trans-04 categoryLink" data-filter="*" style="color: white;">
